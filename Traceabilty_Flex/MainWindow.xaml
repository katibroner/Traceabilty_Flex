<Window x:Class="Traceabilty_Flex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"       
        Title="Traceability" Closed="Window_Closed" WindowStartupLocation="CenterScreen"  Height="1100" Width="1200" Icon="/Images/logo.ico" Closing="Window_Closing">
    <Window.Resources>
        <ImageBrush x:Key="Button0" ImageSource="Images/siemens.jpg" ViewportUnits="Absolute" Viewport="0,0,150,150" Stretch="UniformToFill" />
        <ImageBrush x:Key="Bg" ImageSource="Images/bg5.jpg" TileMode="Tile" Stretch="None" ViewportUnits="Absolute" Viewport="0,0,550,250" />
        <ImageBrush x:Key="Bg1" ImageSource="Images/bg4.jpg" TileMode="Tile" Stretch="None" ViewportUnits="Absolute" Viewport="0,0,550,250" />
        <ImageBrush x:Key="ButtonStart" ImageSource="Images/start2.png" Viewport="0,0,45,45" ViewportUnits="Absolute" />
        <ImageBrush x:Key="ButtonStop" ImageSource="Images/exit.jpg" Viewport="0,0,45,45" ViewportUnits="Absolute" />
        <ImageBrush x:Key="ButtonAbout" ImageSource="Images/about.jpg" Viewport="0,0,45,45" ViewportUnits="Absolute" />
        <ImageBrush x:Key="ButtonClean" ImageSource="Images/clear3.jpg" Viewport="0,0,45,45" ViewportUnits="Absolute" />
        <ImageBrush x:Key="ButtonLine" ImageSource="Images/siemens1.jpg" Viewport="0,0,60,40" ViewportUnits="Absolute" />
        <ImageBrush x:Key="ButtonLogin2" ImageSource="Images/login2.jpg" Viewport="0,0,200,45" ViewportUnits="Absolute" />
        <ImageBrush x:Key="ButtonLogin" ImageSource="Images/login.jpg" Viewport="0,0,200,45" ViewportUnits="Absolute" />
        <BitmapImage x:Key="ImageBoard" UriSource=".\Images\board.jpg"/>
        <ImageBrush x:Key="ButtonSend" ImageSource="Images/send.jpg" Viewport="0,0,35,35" ViewportUnits="Absolute" />
        <ImageBrush x:Key="ButtonStation" ImageSource="Images/siemens_cut.bmp" Viewport="0,0,35,35" ViewportUnits="Absolute" />
        <ImageBrush x:Key="ButtonBarcode" ImageSource="Images/barcode.png" Viewport="0,0,35,35" ViewportUnits="Absolute" />

        <Storyboard x:Key="FlashButton1" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="TextInput1">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.2"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FlashButton2" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="TextInput2">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.2"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FlashButton3" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="TextInput3">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.2"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="FlashButton4" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="TextInput4">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.2"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Fade">
            <ObjectAnimationUsingKeyFrames BeginTime="0:0:0" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation BeginTime="0:0:0.0" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.1"/>
            <DoubleAnimation BeginTime="0:0:0.9" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.1"/>
            <ObjectAnimationUsingKeyFrames BeginTime="0:0:2" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Hidden</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="MovingImage1">
            <!--<DoubleAnimation Storyboard.TargetName="MyImg1" Storyboard.TargetProperty="(Canvas.Top)" To="0" Duration="0:0:0" AutoReverse="False" />-->
            <DoubleAnimation Storyboard.TargetName="MyImg1" Storyboard.TargetProperty="(Canvas.Left)" To="180" Duration="0:0:2.0" AutoReverse="False" />
        </Storyboard>
        <Storyboard x:Key="MovingImage11">
            <DoubleAnimation Storyboard.TargetName="MyImg1" Storyboard.TargetProperty="(Canvas.Left)" To="-60" Duration="0:0:0" AutoReverse="False" />
        </Storyboard>
        <Storyboard x:Key="MovingImage2">
            <DoubleAnimation Storyboard.TargetName="MyImg2" Storyboard.TargetProperty="(Canvas.Left)" To="180" Duration="0:0:2.0" AutoReverse="False" />
        </Storyboard>
        <Storyboard x:Key="MovingImage12">
            <DoubleAnimation Storyboard.TargetName="MyImg2" Storyboard.TargetProperty="(Canvas.Left)" To="-60" Duration="0:0:0" AutoReverse="False" />
        </Storyboard>
        <Storyboard x:Key="MovingImage3">
            <DoubleAnimation Storyboard.TargetName="MyImg3" Storyboard.TargetProperty="(Canvas.Left)" To="180" Duration="0:0:2.0" AutoReverse="False" />
        </Storyboard>
        <Storyboard x:Key="MovingImage13">
            <DoubleAnimation Storyboard.TargetName="MyImg3" Storyboard.TargetProperty="(Canvas.Left)" To="-60" Duration="0:0:0" AutoReverse="False" />
        </Storyboard>
        <Storyboard x:Key="MovingImage4">
            <DoubleAnimation Storyboard.TargetName="MyImg4" Storyboard.TargetProperty="(Canvas.Left)" To="180" Duration="0:0:2.0" AutoReverse="False" />
        </Storyboard>
        <Storyboard x:Key="MovingImage14">
            <DoubleAnimation Storyboard.TargetName="MyImg4" Storyboard.TargetProperty="(Canvas.Left)" To="-60" Duration="0:0:0" AutoReverse="False" />
        </Storyboard>
        <Storyboard x:Key="ChangeColor">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" Storyboard.TargetName="grid">
                <EasingColorKeyFrame KeyTime="0:0:1" Value="Red"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ChangeColor2">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" Storyboard.TargetName="grid">
                <EasingColorKeyFrame KeyTime="0:0:1" Value="White"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="1172">
            <Button x:Name="ButStart" Content="" ToolTip="Start" Click="ButStart_Click" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Width="45" Height="45" Background="{DynamicResource ButtonStart}" Margin="0" BorderThickness="0" Visibility="Collapsed"/>
            <Button x:Name="ButClean" Content="" ToolTip="Clean" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Width="45" Height="45" Background="{DynamicResource ButtonClean}" Margin="20,0,0,0" BorderThickness="0" Click="ButClean_Click" Visibility="Hidden"/>
            <Button x:Name="ButtonLogin" Content="" Width="200" Margin="380,0,0,0" HorizontalAlignment="Left" FlowDirection="LeftToRight" Click="Button_Login_Click" Padding="2,0" FontSize="14" Background="{DynamicResource ButtonLogin2}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden"/>
            <Button x:Name="ButStop" Content="" ToolTip="Exit" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Width="45" Height="45" Background="{DynamicResource ButtonStop}" Margin="480,0,0,0" BorderThickness="0" Click="ButStop_Click" DockPanel.Dock="Right"/>
        </StackPanel>

        <TabControl x:Name="MainTabControl" Grid.Row="2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"  SelectionChanged="MainTabControl_SelectionChanged" Margin="0,15,0,0" Grid.RowSpan="4" Background="{x:Null}">
            <TabItem x:Name="TabOverview" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Margin="15,0,15,0" VerticalAlignment="Center" FontWeight="Bold">
                    Overview
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="{DynamicResource Bg}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="94*"/>
                        <ColumnDefinition Width="158*"/>
                        <ColumnDefinition Width="52*"/>
                        <ColumnDefinition Width="41*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="116*"/>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="432*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="LstMsgBox" VerticalContentAlignment="Center" Background="White" HorizontalAlignment="Left" MinWidth="600" Margin="94,20,0,20" Grid.Column="3" Grid.ColumnSpan="9">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Clear" Click="MenuItem_Click_1" />
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabRecipe" >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Margin="15,0,15,0" VerticalAlignment="Center" FontWeight="Bold">
                    Recipe
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.Background>
                        <ImageBrush Stretch="UniformToFill" ImageSource=".\Images\bg_13.jpg"/>
                    </Grid.Background>
                    <DataGrid x:Name="GridRecipe" AutoGenerateColumns="False" HorizontalAlignment="Left" MinWidth="450" IsReadOnly="True"  SelectionUnit="Cell" VerticalAlignment="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="N" Binding="{Binding id}" />
                            <DataGridTextColumn Header="Station" Binding="{Binding station}" />
                            <DataGridTextColumn Header="Part Number"  Binding="{Binding pn}" />
                            <DataGridTextColumn Header="RefDes" Binding="{Binding rf}" />
                            <DataGridTextColumn Header="Loc" Binding="{Binding loc}" />
                            <DataGridTextColumn Header="Track" Binding="{Binding track}" />
                            <DataGridTextColumn Header="Div" Binding="{Binding div}" />
                            <DataGridTextColumn Header="Tower" Binding="{Binding tower}" />
                            <DataGridTextColumn Header="Level" Binding="{Binding lvl}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabTrace" >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Margin="15,0,15,0" VerticalAlignment="Center" FontWeight="Bold">
                    Trace
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.Background>
                        <ImageBrush Stretch="UniformToFill" ImageSource=".\Images\bg_13.jpg"/>
                    </Grid.Background>
                    <DataGrid x:Name="GridTrace" HorizontalAlignment="Left" IsReadOnly="True" MinWidth="450" SelectionUnit="Cell" VerticalAlignment="Top" ItemsSource="{Binding DataSource}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="N" Binding="{Binding id}" />
                            <DataGridTextColumn Header="Station" Binding="{Binding station}" />
                            <DataGridTextColumn Header="Part Number"  Binding="{Binding pn}" />
                            <DataGridTextColumn Header="RefDes" Binding="{Binding rf}" />
                            <DataGridTextColumn Header="Loc" Binding="{Binding loc}" />
                            <DataGridTextColumn Header="Track" Binding="{Binding track}" />
                            <DataGridTextColumn Header="Div" Binding="{Binding div}" />
                            <DataGridTextColumn Header="Tower" Binding="{Binding tower}" />
                            <DataGridTextColumn Header="Level" Binding="{Binding lvl}" />
                            <DataGridTextColumn Header="Pallet" Binding="{Binding pallet}" />
                            <DataGridTextColumn Header="Unit ID" Binding="{Binding unitID}" />
                            <DataGridTextColumn Header="Batch" Binding="{Binding batch}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem x:Name="TabTails">

                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Margin="15,0,15,0" VerticalAlignment="Center" FontWeight="Bold">
                    Current
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.Background>
                        <ImageBrush Stretch="UniformToFill" ImageSource=".\Images\bg_12.jpg"/>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="283*"/>
                        <RowDefinition Height="135*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="GridLines" IsReadOnly="True" Background="White" SelectionUnit="Cell" CanUserResizeRows="False" ItemsSource="{Binding DataSource}" AutoGenerateColumns="False" Margin="0,0,0,0" Height="470" Width="610" FontSize="14">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Line" Binding="{Binding line}" Width="60"/>
                            <DataGridTextColumn Header="Recipe" Binding="{Binding receipe}" Width="160" />
                            <DataGridTextColumn Header="Time" Binding="{Binding tm, StringFormat=\{0:dd.MM.yyyy HH:mm:ss\}}" Width="Auto"/>
                            <DataGridTextColumn Header="Boards" Binding="{Binding Boards}" Width="Auto" />
                            <DataGridTextColumn Header="Finish Boards" Binding="{Binding Finish_Boards}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Margin="326,43,326,25" BorderThickness="1" Padding="0" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Grid.Row="1" Height="202" Width="414">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <DataGrid x:Name="GridPallet" HorizontalAlignment="Left" MinWidth="200" IsReadOnly="True" VerticalAlignment="Top" Background="{x:Null}" MinHeight="200" ItemsSource="{Binding DataSource}" AutoGenerateColumns="False" MaxHeight="350" >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Pallet" Binding="{Binding pallet}" Width="200" />
                                </DataGrid.Columns>

                            </DataGrid>
                            <StackPanel Orientation="Vertical" MinWidth="250" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20" Text="Current Line" FontSize="14"/>
                                <TextBlock x:Name="TextBoxCurrentLine"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="0,0,0,20" Padding="5" />
                                <Button x:Name="ButtonDelete" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Delete" Margin="0,0,0,20" FontSize="16" Padding="5,5,8,5" Click="ButtonDelete_Click" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

            </TabItem>
            <TabItem x:Name="TabEvents" HorizontalContentAlignment="Stretch" >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Margin="15,0,15,0" VerticalAlignment="Center" FontWeight="Bold">
                    Messages
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="{DynamicResource Bg1}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="57*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Events" FontSize="16" FontStyle="Italic" Grid.ColumnSpan="2">
                        <ListBox x:Name="ListEvents" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontSize="12" FontStyle="Normal">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Clear" Click="MenuItemDelete_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="Errors" FontSize="16" FontStyle="Italic" Foreground="Red" Grid.ColumnSpan="2">
                        <ListBox x:Name="ListErrors" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontSize="12" FontStyle="Normal" BorderBrush="Red" >
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Clear" Click="MenuItem_Click"/>
                                    <MenuItem Header="Copy" Click="MenuItem_Click2"/>

                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabLineManagement" >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Margin="15,0,15,0" VerticalAlignment="Center" FontWeight="Bold">
                    Line Management
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="266*"/>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="21*"/>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="219*"/>
                        <ColumnDefinition Width="533*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="167,18,481,18" Grid.Column="4">
                        <TextBlock Text="Current Line:" FontSize="18" FontFamily="Tahoma"/>
                        <TextBlock x:Name="TextBoxCurrentLineLm" FontSize="18" FontFamily="Tahoma" Margin="0,5,0,8" HorizontalAlignment="Center"/>
                        <GroupBox BorderBrush="{DynamicResource {x:Static SystemColors.InactiveCaptionTextBrushKey}}" Padding="0,5,0,0" Margin="0">
                            <StackPanel HorizontalAlignment="Center">
                                <RadioButton x:Name="RadioInfo" FontSize="14" Margin="0,0,0,10" Content="Info" VerticalContentAlignment="Center" IsChecked="True" Checked="RadioInfo_Checked"/>
                                <RadioButton x:Name="RadioAction" FontSize="14" VerticalContentAlignment="Center" Content="Action" Checked="RadioAction_Checked" Margin="0,0,0,10"/>
                                <RadioButton x:Name="RadioMessage" FontSize="14" VerticalContentAlignment="Center" Content="Message" Checked="RadioMessage_Checked"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="73,10" Grid.ColumnSpan="6">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="0,0,0,10">
                            <StackPanel x:Name="StackMachine1" Margin="0,0,0,0">
                                <TextBlock x:Name="TextStation1" Margin="50,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontFamily="Tahoma"/>
                                <StackPanel  Orientation="Horizontal">
                                    <Button x:Name="ButtonInput11" Height="25" Margin="5,0,5,5" Background="{x:Null}" Content="Open" FontSize="14" FontFamily="Tahoma" Padding="5,1" MinWidth="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" Click="ButtonInput1_Click" Visibility="Hidden"/>
                                    <Button x:Name="ButtonStation1" Width="150" Height="150" Margin="5,0" Background="{DynamicResource Button0}" BorderThickness="3" Click="ButtonStation1_Click" BorderBrush="{x:Null}"/>
                                </StackPanel>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock x:Name="TextInput1" Height="40" Margin="5,0,0,0" Background="{x:Null}" FontFamily="Tahoma" Padding="5,1"  MinWidth="60" />
                                    <Canvas x:Name="Canvas1" MinWidth="160">
                                        <Image x:Name="MyImg1" RenderOptions.BitmapScalingMode="LowQuality" Canvas.Left="-60" Canvas.Top="0" Width="60" Height="40" Source="{StaticResource ImageBoard}" Visibility="Hidden"/>
                                    </Canvas>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock x:Name="TextQty1" FontSize="16" HorizontalAlignment="Left" Text="0" VerticalAlignment="Center" Margin="7,0,0,0" MinWidth="55" TextAlignment="Center" Width="50"/>
                                    <ComboBox x:Name="ComboBox1" HorizontalContentAlignment="Center" Margin="10,0,0,0" MinWidth="155"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel x:Name="StackMachine2">
                                <TextBlock x:Name="TextStation2" Margin="50,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontFamily="Tahoma"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="ButtonInput12" Height="25" Margin="5,0,5,5" Click="ButtonInput2_Click" Background="{x:Null}" Content="Open" FontSize="14" FontFamily="Tahoma" Padding="5,1" MinWidth="60" VerticalAlignment="Bottom" Visibility="Hidden"/>
                                    <Button x:Name="ButtonStation2" Width="150" Height="150" Margin="5,0" Background="{DynamicResource Button0}" BorderThickness="3" BorderBrush="{x:Null}" Click="ButtonStation2_Click" />
                                </StackPanel>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock x:Name="TextInput2" Height="40" Margin="5,0,0,0" Background="{x:Null}" FontFamily="Tahoma" Padding="5,1" VerticalAlignment="Center" MinWidth="60"/>
                                    <Canvas x:Name="Canvas2" MinWidth="160">
                                        <Image x:Name="MyImg2" RenderOptions.BitmapScalingMode="LowQuality"  Canvas.Left="-60" Canvas.Top="0" Width="60" Height="40" Source="{StaticResource ImageBoard}" Visibility="Hidden"/>
                                    </Canvas>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock x:Name="TextQty2" FontSize="16" HorizontalAlignment="Left" Text="0" VerticalAlignment="Center" Margin="7,0,0,0" MinWidth="55" TextAlignment="Center" Width="50"/>
                                    <ComboBox x:Name="ComboBox2" HorizontalContentAlignment="Center" Margin="10,0,0,0" MinWidth="155"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel x:Name="StackMachine3">
                                <TextBlock x:Name="TextStation3" Margin="50,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontFamily="Tahoma"/>
                                <StackPanel  Orientation="Horizontal">
                                    <Button x:Name="ButtonInput13" Height="25" Margin="5,0,5,5" Click="ButtonInput3_Click" Background="{x:Null}" Content="Open" FontSize="14" FontFamily="Tahoma" Padding="5,1" MinWidth="60" VerticalAlignment="Bottom" Visibility="Hidden"/>
                                    <Button x:Name="ButtonStation3" Width="150" Height="150" Margin="5,0" Background="{DynamicResource Button0}" BorderThickness="3" BorderBrush="{x:Null}" Click="ButtonStation3_Click"/>
                                </StackPanel>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock x:Name="TextInput3" Height="40" Margin="5,0,0,0" Background="{x:Null}" FontFamily="Tahoma" Padding="5,1" VerticalAlignment="Center" MinWidth="60"/>
                                    <Canvas x:Name="Canvas3" MinWidth="160">
                                        <Image x:Name="MyImg3" RenderOptions.BitmapScalingMode="LowQuality" Canvas.Left="-60" Canvas.Top="0" Width="60" Height="40" Source="{StaticResource ImageBoard}" Visibility="Hidden"/>
                                    </Canvas>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock x:Name="TextQty3" FontSize="16" HorizontalAlignment="Left" Text="0" VerticalAlignment="Center" Margin="7,0,0,0" MinWidth="55" TextAlignment="Center" Width="50"/>
                                    <ComboBox x:Name="ComboBox3" HorizontalContentAlignment="Center" Margin="10,0,0,0" MinWidth="155"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel x:Name="StackMachine4" >
                                <TextBlock x:Name="TextStation4" Margin="50,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontFamily="Tahoma"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="ButtonInput14" Height="25" Margin="5,0,5,5" Click="ButtonInput4_Click" Background="{x:Null}" Content="Open" FontSize="14" FontFamily="Tahoma" Padding="5,1" MinWidth="60" VerticalAlignment="Bottom" Visibility="Hidden"/>
                                    <Button x:Name="ButtonStation4" Width="150" Height="150" Margin="5,0" Background="{DynamicResource Button0}" BorderThickness="3" BorderBrush="{x:Null}" Click="ButtonStation4_Click"/>
                                </StackPanel>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock x:Name="TextInput4" Height="40" Margin="5,0,0,0" Background="{x:Null}" FontFamily="Tahoma" Padding="5,1" VerticalAlignment="Center" MinWidth="60"/>
                                    <Canvas x:Name="Canvas4" MinWidth="160">
                                        <Image x:Name="MyImg4" RenderOptions.BitmapScalingMode="LowQuality" Canvas.Left="-60" Canvas.Top="0" Width="60" Height="40" Source="{StaticResource ImageBoard}" Visibility="Hidden"/>
                                    </Canvas>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock x:Name="TextQty4" FontSize="16" HorizontalAlignment="Left" Text="0" VerticalAlignment="Center" Margin="7,0,0,0" MinWidth="55" TextAlignment="Center" Width="50"/>
