<Window x:Class="Traceabilty_Flex.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traceabilty_Flex"
        mc:Ignorable="d"
        Title="PasswordDialog" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Please enter your password:" />
        <PasswordBox x:Name="PasswordBox" Margin="0,10,0,10" />
        <Button Content="OK" Click="OnOkButtonClick" HorizontalAlignment="Right" Width="75"/>
    </StackPanel>
</Window>
